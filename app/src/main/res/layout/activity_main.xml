<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2196f3">


    <view
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="185dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_sentiment_satisfied_black_24dp"
        app:layout_constraintStart_toStartOf="@id/v"
        app:layout_constraintTop_toTopOf="@id/v"
        android:layout_margin="3dp"
        android:id="@+id/i_1"
        android:contentDescription="TODO" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/i_1"
        app:layout_constraintTop_toTopOf="@id/i_1"
        android:text="Nada Ali"
        android:id="@+id/t_1"
        android:textSize="8sp"
        android:layout_margin="3dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="just now"
        app:layout_constraintTop_toBottomOf="@id/t_1"
        app:layout_constraintStart_toStartOf="@id/t_1"
        android:textSize="5dp"
        android:id="@+id/t_2" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_play_arrow_black_24dp"
        app:layout_constraintTop_toTopOf="@id/t_1"
        app:layout_constraintStart_toEndOf="@id/t_1"
        app:layout_constraintBottom_toBottomOf="@id/t_1"
        android:layout_margin="1dp"
        android:id="@+id/arrow" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        app:layout_constraintStart_toEndOf="@id/t_2"
        app:layout_constraintTop_toTopOf="@id/t_2"
        app:layout_constraintBottom_toBottomOf="@id/t_2"
        android:layout_margin="1dp"
        android:id="@+id/dot_1" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_public_black_24dp"
        app:layout_constraintStart_toEndOf="@id/dot_1"
        app:layout_constraintTop_toTopOf="@id/t_2"
        app:layout_constraintBottom_toBottomOf="@id/t_2"
        android:layout_margin="1dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/arrow"
        app:layout_constraintTop_toTopOf="@id/t_1"
        app:layout_constraintBottom_toBottomOf="@id/t_1"
        android:text="CSED 2022"
        android:textSize="8dp" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_horiz_black_24dp"
        app:layout_constraintEnd_toEndOf="@id/v"
       app:layout_constraintTop_toTopOf="@id/t_1"
        app:layout_constraintBottom_toBottomOf="@id/t_1"
        android:layout_margin="3dp"
        android:id="@+id/dot_3" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       app:layout_constraintStart_toStartOf="@id/i_1"
        app:layout_constraintEnd_toEndOf="@id/dot_3"
        app:layout_constraintTop_toBottomOf="@id/i_1"
        android:text="every new day is another chance to change your life."
       android:textSize="8dp"
        android:padding="3dp" />
</androidx.constraintlayout.widget.ConstraintLayout>
